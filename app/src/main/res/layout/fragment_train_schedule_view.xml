<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dip"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:textAlignment="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTrainScheduleDesc"/>

    <TextView
        android:textAlignment="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTrainScheduleDate"/>

    <TextView
        android:textAlignment="center"
        android:text="Connection failed [Offline results]"
        android:textColor="#FFA500"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvOfflineStatus"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Arrival"
            android:textColor="#FFA500"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/train_schedule_title"
            android:paddingLeft="10dip"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Departure"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/train_schedule_title"
            android:paddingRight="10dip"
            android:id="@+id/adapterTrainDeparture"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/spiSemester"
        android:layout_marginTop="5dp"
        android:id="@+id/vwBar5"
        android:background="@android:color/darker_gray"/>

    <ListView
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="15dip"
        android:divider="#00000000"
        android:id="@+id/lstTrainSchedule">
    </ListView>
</LinearLayout>